{"run_list": [
      "recipe[sudo]",
      "recipe[nginx::package]",
      // "recipe[mysql::server]",
      // "recipe[mysql::client]",
      "recipe[erlang]",
      "recipe[redisio]",
      "recipe[redisio::enable]",
      "recipe[erlang_instance]"
  ],
  "nginx": {    
      "user": "ubuntu"
  },
  "mysql": {
      "server_root_password": ""
  },
  "erlang": {
      "install_method": "source",
      "source": {"version": "R16B03-1"}
  },
  "authorization": {
      "sudo": {
          "groups": ["ubuntu"],
          "users": ["ubuntu"],
          "passwordless": "true"
      }
  },
  "redisio": {
      "version": "2.8.17",
      "default_settings": {"datadir": "~/redis_db_data"},
      "servers": [
          {"port": 6379, "backuptype": "aof"}
      ]
  }
}
